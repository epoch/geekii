<% @user.statuses.each do |status| %>

  <div class="statuses_show col-lg-4">
  <li><%= image_tag(status.user.avatar, :class => "profile" ) %></li>
  <li> <button class="btn btn-success"><%= link_to(status.user.username, status.user ) %></button></li>
  <li><%= status.category %></li>
  <li<i><%= status.status %>"</i></li>

  <% if user_signed_in? %>
    <li><%= link_to 'Edit', edit_status_path(status), :method => :get, :class => 'btn btn-primary' %>
    <%= link_to 'Delete Status', status, :method => :delete, :class => 'btn btn-danger' %></li>
  <% end %>
    <% flash.each do |name,msg| %>
    <% content_tag(:div, msg, class: "alert alert-#{name}") %>
  <% end %>
  </div>

<% end %>