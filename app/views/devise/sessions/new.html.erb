<div class="container">

  <div class="row">
    <div class="col-lg-4">
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well"}) do |f| %>
      <fieldset>
      <legend>Sign In</legend>
      <%= f.input :email, :autofocus => true %>

      <%= f.input :password %>

      <%= f.submit "Sign in" %>
      </fieldset>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="col-lg-8">
    <h1>TEXT HERE</h1>
    </div>
  </div>

</div>